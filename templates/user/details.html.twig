{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.edit_profile_details'|trans}}
{% endblock %}

{% block body %}
    <h1>{{ 'title.profile_settings'|trans}}</h1>
    <h2>{{ 'title.edit_profile_details' | trans }}</h2>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row col-4 mx-auto float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary btn-lg"/>
    </div>
    <div class="form-group row col-4 mx-auto float-sm-right">
        <a href="{{ url('user_settings') }}" class="btn btn-link">
            {{ 'action.back_to_profile_settings'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}