{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.comment_add'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.comment_add'|trans }}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row col-4 mx-auto float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary btn-lg"/>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('movie_show', {id: movie.id}) }}" title="{{ 'title.movie_details'|trans }}">
            {{ movie.title }} </a>
    </div>
    {{ form_end(form) }}
{% endblock %}